@{
    string CurrentName = Convert.ToString(HttpContext.Current.Request.RequestContext.RouteData.Values["Action"]);
    switch (CurrentName)
    {
        case "Login":
            Layout = "~/Views/Shared/_BlankLayout.cshtml";
            break;
        default:
            //Admin layout
            Layout = "~/Views/Shared/_CustomerLayout.cshtml";
            break;
    }
}  