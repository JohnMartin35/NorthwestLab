@model NorthwestLab.Models.ReceiveSampleViewModel

@{
    ViewBag.Title = "ReceiveSample";
}

<h2>ReceiveSample</h2>

@using (Html.BeginForm())
{
    <table class="table">
        <tr>

            <th>
                Work Order ID
            </th>
            <th>
                Compound ID
            </th>
            <th>
                Sample Sequence Number
            </th>
            <th>Received</th>
        </tr>

        @for (int i = 0; i < Model.Samples.Count; i++)
        {
        <tr>
            <td>
                @Html.HiddenFor(m=>m.Samples[i].WorkOrderID)
                @Html.DisplayFor(m => m.Samples[i].WorkOrderID)
            </td>
            <td>
                @Html.HiddenFor(m => m.Samples[i].CompoundID)
                @Html.DisplayFor(m => m.Samples[i].CompoundID)
            </td>

            <td>
                @Html.HiddenFor(m => m.Samples[i].SampleSequenceID)
                @Html.DisplayFor(m => m.Samples[i].SampleSequenceID)
            </td>
            <td>
                @Html.HiddenFor(m=> m.Samples[i].OriginSampleID)
                @Html.CheckBoxFor(m => m.Samples[i].IsSelected)
            </td>
        </tr>
        }


    </table>
    <input type="submit" class="btn btn-primary">
}

